{% block ipotseluev_fast_order_list %}
    <sw-page class="ipotseluev-fast-order-list">
        <!-- two slots - actions and content #slot_name -->
        <!--difference
         vu js - using existing component and reconfigure it to your needs
         blocks - for overriding from twig
         -->
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block ipotseluev_fast_order_list_smart_bar_actions %}
            <!-- If anyone wants to override anything - we have above block -->
            <template #smart-bar-actions>
            <sw-button variant="primary" :routerLink="{ name: 'ipotseluev.fast.order.create' }">
                {{ $tc('ipotseluev-fast-order.list.addButtonText') }}
            </sw-button>
        </template>
        {% endblock %}

        <template #content>
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block ipotseluev_fast_order_list_content %}
            <sw-entity-listing
                    v-if="fastOrders"
                    :items="fastOrders"
                    :repository="repository"
                    :showSelection="false"
                    :columns="columns"
                    detailRoute="ipotseluev.fast.order.detail"
            >
                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block ipotseluev_fast_order_list_content_list_product %}
                    <template #column-product="{ item }">
                        <template v-if="item.productId">
                            <router-link :to="{ name: 'sw.product.detail', params: { id: item.productId } }">
                                {{ item.product.productNumber }}
                            </router-link>
                        </template>
                    </template>
                {% endblock %}
            </sw-entity-listing>
            {% endblock %}


        </template>
    </sw-page>
{% endblock %}