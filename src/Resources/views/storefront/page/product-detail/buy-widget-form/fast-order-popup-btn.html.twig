<!-- Button trigger modal -->

<button type="button" class="{{ button_class }}" data-bs-toggle="modal" aria-label="Fast Order"
        data-bs-target="#fastOrderModal">
    Fast Order
    <!--TODO: https://developer.shopware.com/docs/guides/plugins/plugins/storefront/using-a-modal-window.html#create-a-modal-using-ajaxmodalplugin -->
</button>
<!-- Modal -->
<div class="modal fade" id="fastOrderModal" tabindex="-1" role="dialog" aria-labelledby="fastOrderModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="fastOrderModalLabel">Fast Order</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- insert your content here -->
                <p>Content Of Modal</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
